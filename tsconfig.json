{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "lib": ["esnext", "dom"],
        "noImplicitAny": false,
        "strict": false,
        "noEmit": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "~components/*": ["theme/src/components/*"],
            "~icons/*": ["theme/src/icons/*"],
            "~styles/*": ["theme/src/styles/*"],
            "~utils/*": ["theme/src/utils/*"],
            "~components": ["theme/src/components"],
            "~icons": ["theme/src/icons"],
            "~styles": ["theme/src/styles"],
            "~utils": ["theme/src/utils"],
            "~types": ["theme/src/types"]
        }
    }
}
